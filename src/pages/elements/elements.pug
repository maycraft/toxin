extends /layout/ui-kit.pug
include /components/textfield/textfield.pug
include /components/dropdown/dropdown.pug
include /components/inputmasked/inputmasked.pug
include /components/date-dropdown/date-dropdown.pug
include /components/subscription-textfield/subscription-textfield.pug
include /components/checkbox-buttons/checkbox-buttons.pug
include /components/radio-buttons/radio-buttons.pug
include /components/toggle-buttons/toggle-buttons.pug
include /components/like-block/like-block.pug
include /components/rate-buttons/rate-buttons.pug
include /components/richbox-list/richbox-list.pug
include /components/range/range.pug
include /components/buttons-block/buttons-block.pug
include /components/button/button.pug
include /components/pagination/pagination.pug
include /components/bullet-list/bullet-list.pug
include /components/feedback/feedback.pug
include /components/checkbox-list/checkbox-list.pug
include /components/benefit-block/benefit-block.pug

block variables
    -
        const title = 'UI-Kit | Form Elements'
        const dropdownRoom = [
            {
                id: 1, 
                name: "спальни",
                wordForms: "спальня,спальни,спален",
                defaultCount: 2,
            },
            {
                id: 2, 
                name: "кровати",
                wordForms: "кровать,кровати,кроватей",
                defaultCount: 2,
            },
            {
                id: 3, 
                name: "ванные комнаты",
                wordForms: "ванная комната,ванные комнаты,ванных комнат"
            }
        ] 
        const dropdownGuests = [
            { id: 1, name: "взрослые", wordForms: ""},
            { id: 2, name: "дети", wordForms: ""},
            { id: 3, name: "младенцы", wordForms: "младенец,младенца,младенцев"}
        ]
        const dropdownGuestsFull = [
            { id: 1, name: "взрослые", wordForms: "", defaultCount: 2},
            { id: 2, name: "дети", wordForms: "", defaultCount: 1},
            { id: 3, name: "младенцы", wordForms: "младенец,младенца,младенцев"}
        ]
        const rateArr = [4, 5]
        const bulletArr = ['Нельзя с питомцами', 'Без вечеринок и мероприятий', 'Время прибытия — после 13:00, а выезд до 12:00']
        const feedbackObj = { 
            ava: 'sarafanov.jpg',
            name: 'Мурад Сарафанов',
            online: '5 дней назад',
            text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
            likeObj: {count: 12, isLiked: true}
        }

block content
    .elements
        section.elements__item
            .element__textfield.mb-2
                +textfield({title: 'Text Field', placeholder: 'Email'})
            .element__textfield.mb-2
                +textfield({title: 'Text Field', placeholder: 'Email', value: 'This is pretty awesome'})
            .element__dropdown.mb-2
                +dropdown({type: 'guest', items: dropdownGuests, title: 'dropdown', defaultValue: 'Сколько гостей', isApply: true, common: 'гость,гостя,гостей'})
            .element__masked-text-field.mb-4
                +inputmasked('masked text field')
            .element__date-dropdown.mb-4
                +dateDropdown({ id: 'elements', classes: 'elements', type: 'double', title_start: 'date Dropdown',title_end: 'date Dropdown',})
            .element__filter-date-dropdown.element-small.mb-4
                +dateDropdown({ id: 'filter', classes: 'filter', type: 'filter', title_start: 'filter date dropdown'})
            .element__subscription-text-field.element-small
                +subscriptionTextfield('subscription text field')
        .elements__divide
        section.elements__item
            .element__checkbox_buttons.mb-4
                +checkboxButtons
            .element__radio__buttons.mb-4
                +radioButtons
            .element__toggle.mb-45
                +toggleButtons
            .element__like-button.mb-4
                +likeBlock
            .element__rate-button
                +rateButtons('rate button', rateArr)
        .elements__divide
        section.elements__item
            .element__range-slider.element-small.mb-4
                +range('Range Slider', 0, 16000, 5000, 10000, 1000)
            .element__buttons.mb-3
                +buttonsBlock
            .element__big-button.mb-4
                +btn({type: 'big', title: 'перейти к оплате'})
            .element__pagination
                +pagination('pagination')
        section.elements__item
            .element__dropdown.element-small.mb-2.mb-2
                +dropdown({type: 'room', items: dropdownRoom, title: 'dropdown', defaultValue: 'Что предпочитаете'})
            .element__dropdown-open.element-small
                +dropdown({type: 'room', items: dropdownRoom, title: 'dropdown', defaultValue: 'Что предпочитаете', isOpen: true})
            .element__expandable-checkbox-list.element-small
                +checkboxList
            .element__expandable-checkbox-list-open.element-small
                +checkboxList({ isOpen: true })
        .elements__divide
        section.elements__item 
            .element__dropdownguest-open
                +dropdown({type: 'guest-open', items: dropdownGuests, title: 'dropdown', defaultValue: 'Сколько гостей', isApply: true, common: 'гость,гостя,гостей', isOpen: true})
            .element__rich-checkbox-buttons
                +richboxList
        .elements__divide
        section.elements__item
            .element__dropdownguest-open
                +dropdown({type: 'guest-full', items: dropdownGuestsFull, title: 'dropdown', defaultValue: 'Сколько гостей', isApply: true, common: 'гость,гостя,гостей', isOpen: 'true'})
            .element__bullet-list
                +bulletList('bullet list', bulletArr)
        .elements__item
            .element__benefit.element-small
                +benefitBlock
        .elements__divide
        .elements__item.elements__item-join
            .element__review 
                +feedback(feedbackObj)
        .elements__divide
        .elements__divide
