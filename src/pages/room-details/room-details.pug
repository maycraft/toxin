extends /layout/layout
include /components/header/header
include /components/footer/footer
include /components/form-reserv/form-reserv
include /components/benefit-block/benefit-block
include /components/feedback-block/feedback-block
include /components/bullet-list/bullet-list
include /components/chart/chart

block variables
    -
        const title = 'Room details'
        const data = require('@pages/room-details/room-details.config.json')
        const { benefitData, bulletList } = data

block content
    +header
    main.detail 
        .detail__images
            img.detail__image.detail__image-main(
                src='/toxin/assets/img/room1.jpg',
                alt='main photo'
            )
            img.detail__image(src='/toxin/assets/img/detail-2.jpg', alt='second photo')
            img.detail__image(src='/toxin/assets/img/detail-3.jpg', alt='third photo')
        .container 
            .detail__descr.descr
                .descr__common
                    .descr__item
                        .descr__about
                            .descr__info
                                +benefitBlock(benefitData)
                            .descr__impress
                                h2.impress__title Впечатления от номера
                                .impress
                                    +chart
                    .descr__item
                        .descr__reviews
                            +feedbackBlock
                    .descr__item
                        .descr__extra
                            .descr__rules.rules
                                h2.descr__title.descr__title-offset Правила
                                +bulletList('', bulletList)
                            .descr__cancel.cancel
                                h2.descr__title Отмена
                                p.cancel__info Бесплатная отмена в течение 48 ч. После этого при отмене не позднее чем за 5 дн. до прибытия вы получите полный возврат за вычетом сбора за услуги.
                .descr__reserv 
                    +formReserv
    +footer
