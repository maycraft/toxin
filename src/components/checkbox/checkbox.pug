mixin checkbox(options)
    -
        let {name='', value='', title='', isChecked=false, isRich=false, descr=''} = options
        let className = 'checkbox__title';
        className += isRich ? ' checkbox__title-rich' : '' 
    label.checkbox
        input(type='checkbox', value=value, checked=isChecked)
        span.checkbox__checkmark
        span.checkbox__body
            span(class=className)= title
                if isRich
                    span.checkbox__descr= descr
