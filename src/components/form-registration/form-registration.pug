include /components/textfield/textfield.pug
include /components/radio-buttons/radio-buttons.pug
include /components/inputmasked/inputmasked.pug
include /components/toggle/toggle.pug
include /components/button/button.pug
include /components/auth-info/auth-info.pug

mixin formRegistration(customConfig = {})
    - const defaultConfig = require("@components/form-registration/form-registration.config.json");
    - const mergedConfig = Object.assign({}, defaultConfig, customConfig);
    - const { title, list: radioButtonsData, btnText = "перейти к оплате" } = mergedConfig;
    .form.form-registration 
        .form-registration__element
            h1.form-registration__title= title
        .form-registration__element-mb21
            .form-registration__subelement
                +textfield({placeholder: 'Имя'})
            .form-registration__subelement
                +textfield({placeholder: 'Фамилия'})
            +radioButtons({title: '', list: radioButtonsData})
        .form-registration__element
            +inputmasked('дата рождения')
        .form-registration__element-mb25
            .form-registration__subelement
                +textfield({title: 'данные для входа в сервис', placeholder: 'Email'})
            .form-registration__subelement
                +textfield({placeholder: 'Пароль'})
            +toggle({text: 'Получать спецпредложения', name: 'offer'})
        .form-registration__element-mb25
            +btn({type: 'big', title: btnText})
        .form-registration__element
            +authInfo('Уже есть аккаунт на Toxin', 'войти')
