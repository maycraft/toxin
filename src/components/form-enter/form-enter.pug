include /components/textfield/textfield.pug
include /components/button/button.pug
include /components/auth-info/auth-info.pug

mixin formEnter(title)
    .form.form-enter
        .form-enter__element
            h1.form-enter= title
        .form-enter__element
            .form-enter__subelement
                +textfield({placeholder: 'Email'})
            +textfield({placeholder: 'Пароль'})
        .form-enter__element
            +btn({type: 'big', title: 'войти'})
        .form-enter__element-mt3
            +authInfo('Нет аккаунта на Toxin?', 'создать')
